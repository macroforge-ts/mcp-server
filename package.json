{
  "bin": {
    "macroforge-mcp": "./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.1"
  },
  "description": "MCP server for Macroforge documentation and code analysis",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "files": [
    "dist",
    "docs"
  ],
  "keywords": [
    "mcp",
    "macroforge",
    "typescript",
    "macros",
    "documentation"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "name": "@macroforge/mcp-server",
  "peerDependencies": {
    "macroforge": "^0.1.49"
  },
  "peerDependenciesMeta": {
    "macroforge": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macroforge-ts/mcp-server.git"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "build:docs": "rust-script scripts/extract-docs.rs",
    "clean": "rm -rf dist",
    "cleanbuild": "npm run clean && npm run build",
    "dev": "npx @modelcontextprotocol/inspector dist/index.js",
    "start": "node dist/index.js",
    "test": "node --test tests/**/*.test.js"
  },
  "type": "module",
  "version": "0.1.49"
}
